{% extends 'base.html.twig' %}

{% block title %}NILS LTI{% endblock %}

{% block stylesheets %}<style>
p.info {
  margin-bottom: 1rem;
}
</style>{% endblock %}

{% block body %}
<form method="post" action="/">
  <h2>LTI login example</h3>
  <p>
    This form enables on the fly editing of all LTI paramters used in a basic launch request.<br />
    This configuration should be stored on the server and should not be altered by ordinary users.<br />
    Keep the "shared secret" confidential!
  </p>
  <hr />
  <h3>LTI Provider</h3>
  <div class="row">
    <div class="columns">
      <label for="consumerKeyInput">Consumer key</label>
      <input required name="consumerKey" class="u-full-width" type="text" placeholder="xyz" id="consumerKeyInput" value="{{ consumerKey }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="sharedSecretInput">Shared secret</label>
      <input required name="sharedSecret" class="u-full-width" type="text" placeholder="password" id="sharedSecretInput" value="{{ sharedSecret }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="launchUrlInput">Launch URL</label>
      <input required name="launchUrl" class="u-full-width" type="text" placeholder="https://bizquiz.cloud/api/lti" id="launchUrlInput" value="{{ launchUrl }}">
    </div>
  </div>
  <hr />
  <h3>User</h3>
  <div class="row">
    <div class="columns">
      <label for="idInput">User Id</label>
      <input required name="id" class="u-full-width" type="text" placeholder="12345" id="idInput" value="{{ id }}">
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <label for="emailInput">Your email (optional)</label>
      <input name="email" class="u-full-width" type="email" placeholder="test@mailbox.com" id="emailInput">
    </div>
    <div class="six columns">
      <label for="launchPresentationLocaleInput">Locale (optional)</label>
      <input name="launchPresentationLocale" class="u-full-width" type="text" placeholder="en-US" id="launchPresentationLocaleInput">
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <label for="firstnameInput">Firstname</label>
      <input name="firstname" class="u-full-width" type="text" placeholder="Max" id="firstnameInput">
    </div>
    <div class="six columns">
      <label for="lastnameInput">Lastname</label>
      <input name="lastname" class="u-full-width" type="text" placeholder="Muster" id="lastnameInput">
    </div>
  </div>
  <hr />
  <h3>NILS Custom Parameters</h3>
  <div class="row">
    <div class="columns">
      <label for="customCompanyNameInput">Company Name (optional) <code>VARCHAR(32)</code> <i>custom_company_name</i></label>
      <input name="customCompanyName" class="u-full-width" type="text" placeholder="Bionic Beaver" id="customCompanyNameInput" value="{{ customCompanyName }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="customCompanyIdInput">Company Id (optional) <code>VARCHAR(32)</code> <i>custom_company_id</i></label>
      <input name="customCompanyId" class="u-full-width" type="text" placeholder="Bionic Beaver" id="customCompanyIdInput" value="{{ customCompanyId }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="customIsCompanySuperiorInput">Company is Superior (optional) <code>VARCHAR(1)</code> <i>custom_is_company_superior</i></label>
      <input name="customIsCompanySuperior" class="u-full-width" type="text" placeholder="0" id="customIsCompanySuperiorInput" value="{{ customIsCompanySuperior }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="customAssignedCompanyIdsInput">Groups (optional) <code>array&lt;VARCHAR(255)&gt;</code> <i>custom_groups</i></label>
      <p class="info">A comma-separated list of all company Ids the user should be able to report</p>
      <input name="customAssignedCompanyIds" class="u-full-width" type="text" placeholder="12,13" id="customassignedCompanyIdsInput" value="{{ customAssignedCompanyIds }}">
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <label for="customIsSuperiorInput">is Superior (optional) <code>VARCHAR(1)</code> <i>custom_is_superior</i></label>
      <input name="customIsSuperior" class="u-full-width" type="text" placeholder="0" id="customIsSuperiorInput" value="{{ customIsSuperior }}">
    </div>
  </div>
  <hr />
  <input class="button-primary" type="submit" value="Generate signed LTI launch form">
</form>
{% endblock %}
